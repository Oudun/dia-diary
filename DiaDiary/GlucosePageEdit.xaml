            </Grid>-->

        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Delete" Width="300" Grid.Row="2">
            <!--<Image Source="appbar.delete.rest.png"/>-->
            <Button.Background>
                <ImageBrush ImageSource="appbar.delete.rest.png" Stretch="none"/>
            </Button.Background>

        </Button>

    </Grid>

</phone:PhoneApplicationPage>
